{% comment %}
  Enhanced 404 Page Section with React components
{% endcomment %}

<section class="py-16 bg-white min-h-screen flex items-center">
  <div class="container">
    <div class="text-center max-w-2xl mx-auto">
      <!-- 404 Icon -->
      <div class="mb-8">
        <div class="w-32 h-32 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.467-.881-6.08-2.33m0 0l-.431-.431A7.963 7.963 0 016 10.5C6 5.358 10.358 1 15.5 1s9.5 4.358 9.5 9.5c0 2.121-.835 4.047-2.189 5.739m0 0l-.431.431A7.963 7.963 0 0115.5 19c-2.34 0-4.467-.881-6.08-2.33"></path>
          </svg>
        </div>
      </div>

      <!-- Error Message -->
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-700 mb-6">
        {{ '404.title' | t | default: 'Page Not Found' }}
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        {{ '404.not_found' | t | default: 'The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.' }}
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {% capture back_to_home_props %}
        {
          "children": "Back to Home",
          "variant": "primary",
          "size": "lg",
          "href": "{{ routes.root_url }}"
        }
        {% endcapture %}
        {% render 'react-component', component: 'AnimatedButton', props: back_to_home_props %}

        {% capture browse_products_props %}
        {
          "children": "{{ '404.back_to_shopping' | t | default: 'Browse Products' }}",
          "variant": "outline",
          "size": "lg",
          "href": "{{ routes.all_products_collection_url }}"
        }
        {% endcapture %}
        {% render 'react-component', component: 'AnimatedButton', props: browse_products_props %}
      </div>

      <!-- Search Suggestion -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="text-gray-600 mb-4">Or try searching for what you need:</p>
        <div class="max-w-md mx-auto">
          <form action="{{ routes.search_url }}" method="get" role="search" class="relative">
            <input
              type="search"
              name="q"
              placeholder="Search products..."
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary pr-12"
              autocomplete="off"
            >
            <button
              type="submit"
              class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-primary text-white px-4 py-1.5 rounded hover:bg-blue-700 transition-colors"
            >
              Search
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "error-page",
  "settings": []
}
{% endschema %}
