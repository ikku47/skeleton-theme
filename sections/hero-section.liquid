{% comment %}
  Simple Hero Section with React component integration
{% endcomment %}

{% liquid
  assign title = section.settings.title | default: 'Welcome to Our Store'
  assign subtitle = section.settings.subtitle | default: 'Premium Collection'
  assign description = section.settings.description | default: 'Discover our curated selection of premium products designed to elevate your lifestyle.'
  assign cta_text = section.settings.cta_text | default: 'Shop Now'
  assign cta_url = section.settings.cta_url | default: '/collections/all'
  assign background_image = section.settings.background_image
%}

{% capture hero_props %}
{
  "title": "{{ title | escape }}",
  "subtitle": "{{ subtitle | escape }}",
  "description": "{{ description | escape }}",
  "cta_text": "{{ cta_text | escape }}",
  "cta_url": "{{ cta_url }}"{% if background_image %},
  "background_image": "{{ background_image | image_url: width: 1920, height: 1080 }}"{% endif %}
}
{% endcapture %}

{% render 'react-component', component: 'HeroSection', props: hero_props %}

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated selection of premium products designed to elevate your lifestyle."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x1080px"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
