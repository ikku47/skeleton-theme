{% comment %}
  VersaCommerce Hero Section - 50/50 split with left text, right image
{% endcomment %}

{% liquid
  assign title = section.settings.title | default: shop.name
  assign subtitle = section.settings.subtitle
  assign description = section.settings.description | default: shop.description | default: 'Discover our curated selection of premium products designed for the modern lifestyle.'
  assign cta_text = section.settings.cta_text | default: 'Shop Now'
  assign cta_url = section.settings.cta_url | default: routes.all_products_collection_url
  assign secondary_cta_text = section.settings.secondary_cta_text
  assign secondary_cta_url = section.settings.secondary_cta_url
  assign background_image = section.settings.background_image
  assign video_url = section.settings.video_url
%}

{% capture hero_props %}
{
  "title": {{ title | json }},
  {% if subtitle != blank %}"subtitle": {{ subtitle | json }},{% endif %}
  "description": {{ description | json }},
  "cta_text": {{ cta_text | json }},
  "cta_url": {{ cta_url | json }}{% if secondary_cta_text != blank %},
  "secondary_cta_text": {{ secondary_cta_text | json }},
  "secondary_cta_url": {{ secondary_cta_url | default: routes.collections_url | json }}{% endif %}{% if background_image %},
  "background_image": {{ background_image | image_url: width: 1920, height: 1080 | json }}{% endif %}{% if video_url != blank %},
  "video_url": {{ video_url | json }}{% endif %}
}
{% endcapture %}

{% render 'react-component', component: 'VersaHeroSection', props: hero_props %}

{% schema %}
{
  "name": "Versa Hero",
  "tag": "section",
  "class": "versa-hero-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "info": "Leave empty to use shop name",
      "default": "Welcome to VersaCommerce"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "info": "Optional subtitle above the main title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "info": "Leave empty to use shop description",
      "default": "Discover our curated selection of premium products designed for the modern lifestyle."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Primary Button URL",
      "info": "Leave empty to use all products collection"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary Button Text",
      "info": "Optional secondary button"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary Button URL"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Hero Image",
      "info": "Recommended: 1920x1080px"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "Optional background video (MP4 format recommended)"
    }
  ],
  "presets": [
    {
      "name": "Versa Hero"
    }
  ]
}
{% endschema %}
