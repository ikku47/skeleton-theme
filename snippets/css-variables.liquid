{% comment %} Google Fonts Preconnect {% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

{% style %}
  {% comment %} VersaCommerce Elegant Typography - Load Google Fonts {% endcomment %}
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Dancing+Script:wght@400;500;600&display=swap');

  :root {
    {% comment %} Elegant Typography Hierarchy {% endcomment %}
    --font-display: 'Playfair Display', 'Garamond', 'Times New Roman', serif;
    --font-heading: 'Playfair Display', 'Garamond', 'Times New Roman', serif;
    --font-body: 'Montserrat', 'Open Sans', 'Lato', system-ui, sans-serif;
    --font-accent: 'Dancing Script', 'Brush Script MT', cursive;

    {% comment %} Sophisticated Color Palette - Warm & Elegant {% endcomment %}
    {% comment %} Primary Neutrals {% endcomment %}
    --color-white: #FFFFFF;
    --color-off-white: #F8F8F8;
    --color-light-gray: #EAEAEA;
    --color-lighter-gray: #F1F1F1;

    {% comment %} Warm Accents & Text {% endcomment %}
    --color-warm-brown: {{ settings.warm_brown_color | default: '#6A554A' }};
    --color-taupe: {{ settings.taupe_color | default: '#D8C7B8' }};
    --color-gold: {{ settings.gold_color | default: '#B08D57' }};
    --color-light-gold: {{ settings.light_gold_color | default: '#C9A977' }};

    {% comment %} Text & Dark Elements {% endcomment %}
    --color-charcoal: {{ settings.charcoal_color | default: '#333333' }};
    --color-dark: {{ settings.dark_color | default: '#212121' }};
    --color-medium-gray: {{ settings.medium_gray_color | default: '#6F6F6F' }};

    {% comment %} Accent Colors {% endcomment %}
    --color-accent-red: {{ settings.accent_red_color | default: '#BF5700' }};
    --color-success: {{ settings.success_color | default: '#4A7C59' }};
    --color-error: {{ settings.error_color | default: '#B85450' }};

    {% comment %} Legacy support - mapped to new sophisticated colors {% endcomment %}
    --color-primary: var(--color-charcoal);
    --color-secondary: var(--color-warm-brown);
    --color-accent: var(--color-gold);
    --color-light-bg: var(--color-off-white);
    --color-neutral: var(--color-medium-gray);
    --color-card-bg: var(--color-white);
    --color-border: var(--color-light-gray);

    {% comment %} VersaCommerce Typography Scale {% endcomment %}
    --text-hero: 56px;
    --text-section-title: 36px;
    --text-body: 16px;
    --text-caption: 14px;

    {% comment %} VersaCommerce Spacing System {% endcomment %}
    --container-max-width: 1440px;
    --gutter-width: 5%;
    --section-padding-desktop: 80px;
    --section-padding-tablet: 60px;
    --section-padding-mobile: 40px;

    {% comment %} VersaCommerce Border Radius {% endcomment %}
    --border-radius-cta: 12px;
    --border-radius-card: 8px;
  }

  {% comment %} VersaCommerce Base Styles {% endcomment %}
  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding-left: var(--gutter-width);
    padding-right: var(--gutter-width);
  }

  .section-padding {
    padding-top: var(--section-padding-desktop);
    padding-bottom: var(--section-padding-desktop);
  }

  @media (max-width: 1024px) {
    .section-padding {
      padding-top: var(--section-padding-tablet);
      padding-bottom: var(--section-padding-tablet);
    }
  }

  @media (max-width: 768px) {
    .section-padding {
      padding-top: var(--section-padding-mobile);
      padding-bottom: var(--section-padding-mobile);
    }
  }

  {% comment %} VersaCommerce CTA Button Styles {% endcomment %}
  .btn-cta {
    background-color: var(--color-accent);
    color: var(--color-primary);
    border-radius: var(--border-radius-cta);
    font-weight: 600;
    padding: 12px 24px;
    transition: all 0.2s ease;
  }

  .btn-cta:hover {
    background-color: #e6bc00;
    transform: translateY(-1px);
  }
{% endstyle %}
