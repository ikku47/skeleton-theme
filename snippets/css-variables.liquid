{% comment %} Google Fonts Preconnect {% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

{% style %}
  {% comment %} Load Inter font {% endcomment %}
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');

  :root {
    {% comment %} Font family variables {% endcomment %}
    --font-heading: 'Inter', system-ui, -apple-system, sans-serif;
    --font-body: 'Inter', system-ui, -apple-system, sans-serif;

    {% comment %} Basic color variables {% endcomment %}
    --color-primary: {{ settings.primary_color | default: '#2563eb' }};
    --color-secondary: {{ settings.secondary_color | default: '#64748b' }};
    --color-accent: {{ settings.accent_color | default: '#f59e0b' }};
  }
{% endstyle %}
